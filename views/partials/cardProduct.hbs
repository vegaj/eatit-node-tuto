<div align="center" class="
    col-lg-3
    col-sm-4
    col-xs-12
    mt-2 pl-2 pr-2 pb-1
    border-bottom border-right rounded border-primary
    bg-white">

    <div class="list-group">
    <img src={{ fetchImage this.imgUrl }} 
        class="img-fluid mt-2 border-2 list-item"
        style="max-width=250px; height: auto; border-radius:10%">
    <div class="list-item">
        <h3>{{ name }}</h3>
        <p>{{ desc }}</p>
    </div>
    
    <button class="btn btn-success list-item">
        <b>Comprar</b> {{ currency price }}
        <span class="fas fa-cart-plus"></span>
    </button>

    </div>
    
</div>  